@page
@model DisasterAlleviationFoundation.Pages.DisasterReports.CreateModel
@{
    ViewData["Title"] = "Report Disaster";
}

<h1>Report a Disaster</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="DisasterReport.Type"></label>
        <input asp-for="DisasterReport.Type" class="form-control" />
        <span asp-validation-for="DisasterReport.Type" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DisasterReport.Location"></label>
        <input asp-for="DisasterReport.Location" class="form-control" />
        <span asp-validation-for="DisasterReport.Location" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DisasterReport.Severity"></label>
        <input asp-for="DisasterReport.Severity" class="form-control" />
        <span asp-validation-for="DisasterReport.Severity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DisasterReport.Description"></label>
        <textarea asp-for="DisasterReport.Description" class="form-control"></textarea>
        <span asp-validation-for="DisasterReport.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DisasterReport.DateReported"></label>
        <input asp-for="DisasterReport.DateReported" class="form-control" type="date" />
        <span asp-validation-for="DisasterReport.DateReported" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit Report</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}