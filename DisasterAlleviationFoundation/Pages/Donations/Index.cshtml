@page
@model DisasterAlleviationFoundation.Pages.Donations.IndexModel
@{
    ViewData["Title"] = "Donations";
}

<h1>Donations</h1>

<table class="table">
    <thead>
        <tr>
            <th>Donor</th>
            <th>Resource Type</th>
            <th>Description</th>
            <th>Quantity</th>
            <th>Date Donated</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var donation in Model.Donations)
        {
            <tr>
                <td>@donation.DonorName</td>
                <td>@donation.ResourceType</td>
                <td>@donation.Description</td>
                <td>@donation.Quantity</td>
                <td>@donation.DateDonated.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>